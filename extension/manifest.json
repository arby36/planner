{
  "manifest_version": 2,

  "name": "Planner",
  "description": "2Goo Planner lets you organize your home, school, and other work, all inside Chrome.",
  "version": "2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["popup.js"]
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs"
  ]
}
